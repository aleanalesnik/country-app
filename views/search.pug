extends layout

block content
	h1 Please type a country:
	form(method='GET' action='/search' autocomplete='off')
		input(type="text", name="firstname" placeholder="e.g. Afghanistan")
	div#blah
		p#countryname
		p#capital
		p#region
	script(src="https://ajax.aspnetcdn.com/ajax/jQuery/jquery-3.2.1.min.js")
	script.

		$("input").keyup(function(){
			
			var txt = $("input").val();

			$.get("/search_result", { input: txt }, function(data){
			$('#countryname').html(`Your country: ${data.output.name} ! <br>`)
			$('#capital').html(`Capital: ${data.output.capital} <br>`)
			$('#region').html(`Region: ${data.output.region}`)
			})
		});	